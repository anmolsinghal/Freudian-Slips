<Page
    x:Class="copiedApp.Instructions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:copiedApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#0033cc">
        <RelativePanel Margin="100,100,100,100">
            <TextBlock x:ConnectionId='1' Name="textb" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>
            <Button x:ConnectionId='2'                      RelativePanel.AlignHorizontalCenterWith="textb" RelativePanel.Below="textb" MinWidth="100" MinHeight="30"/>
        </RelativePanel>
    </Grid>
</Page>

